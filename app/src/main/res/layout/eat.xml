<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.7">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FOOD"
            android:textStyle="bold"
            android:background="#AEF359"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center"/>
        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/datepicker1"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/edtContent"
            android:layout_weight="1.6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아침"
            android:textColor="@color/black"
            android:textSize="22dp"/>

        <EditText
            android:id="@+id/edtEat"
            android:layout_weight="0.6"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="음식을 입력하세요 음식은 ' , '로 구분"/>

        <EditText
            android:id="@+id/edtCal"
            android:layout_weight="1.4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="총 칼로리"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/edtContent2"
            android:layout_weight="1.6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="점심"
            android:textColor="@color/black"
            android:textSize="23dp"/>

        <EditText
            android:id="@+id/edtEat2"
            android:layout_weight="0.6"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="음식을 입력하세요 음식은 ' , '로 구분"/>

        <EditText
            android:id="@+id/edtCal2"
            android:layout_weight="1.4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="총 칼로리"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/edtContent3"
            android:layout_weight="1.6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저녁"
            android:textColor="@color/black"
            android:textSize="23dp"/>

        <EditText
            android:id="@+id/edtEat3"
            android:layout_weight="0.6"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="음식을 입력하세요 음식은 ' , '로 구분"/>

        <EditText
            android:id="@+id/edtCal3"
            android:layout_weight="1.4"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="총 칼로리"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUTTON"/>
        <Button
            android:id="@+id/BtnE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="돌아가기"/>
    </LinearLayout>
</LinearLayout>